{
  "openapi": "3.0.0",
  "info": {
    "title": "Task Management API",
    "version": "1.0.0",
    "description": "API for managing tasks and holiday tasks with OAuth (GitHub) authentication."
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "http://localhost:3000/api/auth/github",  
            "tokenUrl": "http://localhost:3000/api/auth/github/callback", 
            "scopes": {
              "user": "User profile access"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/tasks/Tasks": {
      "get": {
        "summary": "Get all tasks",
        "security": [
          {
            "bearerAuth": ["user"]
          }
        ],
        "responses": {
          "200": {
            "description": "List of tasks"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Create a new task",
        "responses": {
          "201": {
            "description": "Task created"
          }
        }
      }
    },
    "/tasks/Tasks/{id}": {
      "put": {
        "summary": "Update a task",
        "responses": {
          "200": {
            "description": "Task updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a task",
        "responses": {
          "200": {
            "description": "Task deleted"
          }
        }
      }
    },
    "/holidayTasks/HolidayTasks": {
      "get": {
        "summary": "Get all holiday tasks",
        "security": [
          {
            "bearerAuth": ["user"]
          }
        ],
        "responses": {
          "200": {
            "description": "List of holiday tasks"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Create a new holiday task",
        "responses": {
          "201": {
            "description": "Holiday task created"
          }
        }
      }
    },
    "/holidayTasks/HolidayTasks/{id}": {
      "put": {
        "summary": "Update a holiday task",
        "responses": {
          "200": {
            "description": "Holiday task updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a holiday task",
        "responses": {
          "200": {
            "description": "Holiday task deleted"
          }
        }
      }
    },
    "/auth/github": {
      "get": {
        "summary": "Authenticate via GitHub",
        "responses": {
          "200": {
            "description": "GitHub authentication initiated"
          }
        }
      }
    },
    "/auth/github/callback": {
      "get": {
        "summary": "GitHub OAuth callback",
        "responses": {
          "200": {
            "description": "GitHub OAuth callback received"
          }
        }
      }
    }
  }
}
