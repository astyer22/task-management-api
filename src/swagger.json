{
  "swagger": "2.0",
  "info": {
    "title": "Task Management API",
    "description": "API for managing tasks",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/Tasks": {
      "get": {
        "description": "Retrieve all tasks",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new task",
        "parameters": [
          {
            "name": "task",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "date": {
                  "type": "string",
                  "format": "date"
                },
                "due_date": {
                  "type": "string",
                  "format": "date"
                },
                "location": {
                  "type": "string"
                },
                "subtasks": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "category": {
                  "type": "string"
                },
                "completed": {
                  "type": "boolean"
                }
              },
              "required": ["title", "category"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/HolidayTasks": {
      "get": {
        "description": "Retrieve all holiday tasks",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new holiday task",
        "parameters": [
          {
            "name": "holidayTask",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "date": {
                  "type": "string",
                  "format": "date"
                },
                "location": {
                  "type": "string"
                },
                "subtasks": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "gifts": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "task_for_who": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "category": {
                  "type": "string"
                },
                "completed": {
                  "type": "boolean"
                }
              },
              "required": ["title", "category"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}
